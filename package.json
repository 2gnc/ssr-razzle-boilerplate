{
  "name": "mtgtrader",
  "version": "1.1.2",
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js",
    "lint": "node_modules/.bin/eslint . -c .eslintrc.json --ext .ts,.tsx,.js",
    "run-container:dev": "docker run -d --rm -v ${PWD}:/mtgtrader/app -p 3001:3001 -p 3000:3000 mtgtrader:dev",
    "run-container:prod": "docker run -d --rm -p 3001:3001 -p 3000:3000 mtgtrader:prod",
    "run-compose:dev": "NODE_ENV=development docker-compose up",
    "run-compose:prod": "NODE_ENV=production docker-compose up",
    "build-conainer-dev:web": "docker build -t mtgtrader:dev --target dev .",
    "build-conainer-prod:web": "docker build -t mtgtrader:prod --target prod .",
    "swagger-editor": "docker run --rm -d -p 80:8080 swaggerapi/swagger-editor",
    "swagger-ui": "docker run --rm -d -p 80:8080 -e SWAGGER_JSON=/app/swagger.json -e BASE_URL=/swagger  -v ${PWD}:/app swaggerapi/swagger-ui"
  },
  "dependencies": {
    "axios": "0.21.1",
    "express": "4.17.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "@types/react-router-dom": "5.1.8",
    "@types/webpack-env": "1.16.2",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "babel-eslint": "10.1.0",
    "babel-preset-razzle": "4.0.6",
    "eslint": "7.18.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-webpack-plugin": "2.1.0",
    "html-webpack-plugin": "4.5.2",
    "mini-css-extract-plugin": "0.9.0",
    "razzle": "4.0.6",
    "razzle-dev-utils": "4.0.6",
    "razzle-plugin-eslint": "4.0.6",
    "typescript": "4.0.8",
    "webpack": "4.44.1",
    "webpack-dev-server": "3.11.2"
  }
}
