{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": false,
        "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-console": ["error", { "allow": ["warn", "error", "info"] }],
        "strict": ["error", "global"],
        "curly": "warn",
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "import/extensions": [
            0,
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "no-trailing-spaces": [2, { "skipBlankLines": true }],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }]
    },
    "settings": {
        "import/resolver": {
            "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
